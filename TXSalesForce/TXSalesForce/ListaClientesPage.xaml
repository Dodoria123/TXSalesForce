<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TXSalesForce.ListaClientesPage"
             Title="Lista de Clientes">
    <ContentPage.Content>
        <StackLayout Margin="10,10,10,10">
            <ListView x:Name="lstListaClientes" ItemsSource="" HorizontalOptions="FillAndExpand" BackgroundColor="White" ItemTapped="lstListaClientes_ItemTapped" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nome}" TextColor="Black" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>